<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/round_corner_design"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/check_fruit_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure this is an apple?"
        android:textSize="25dp"
        android:textColor="#000"
        android:gravity="center"
        android:padding="30dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/check_fruit_dialog_no"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="No"
            android:textSize="30dp"
            android:gravity="center" />

        <Button
            android:id="@+id/check_fruit_dialog_yes"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yes"
            android:textSize="30dp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>