<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/round_corner_design"
    android:padding="20dp"
    android:layout_height="wrap_content" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Attention"
        android:textSize="30dp"
        android:textColor="#DC143C"/>

    <TextView
        android:id="@+id/information_unripe_fruit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="No such fruit in our database"
        android:textSize="23dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/information_unripe_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/information_good_fruit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="No such fruit in our database"
        android:textSize="23dp"
        android:textColor="#000"/>

    <TextView
        android:id="@+id/information_good_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:textColor="#000"/>

</LinearLayout>